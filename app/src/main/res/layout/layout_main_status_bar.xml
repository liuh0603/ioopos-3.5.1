<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:text="2020.7.6"
            android:textColor="#FFFFFF"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:text="周一"
            android:textColor="#FFFFFF"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|right">

            <com.pay.ioopos.widget.SignalEthernetView
                android:id="@+id/ethernet"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginHorizontal="3dp">
            </com.pay.ioopos.widget.SignalEthernetView>
            <com.pay.ioopos.widget.SignalWifiView
                android:id="@+id/wifi"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginHorizontal="3dp"/>
            <com.pay.ioopos.widget.SignalCellularView
                android:id="@+id/cellular"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginHorizontal="3dp"/>
            <com.pay.ioopos.widget.SignalBatteryView
                android:id="@+id/battery"
                android:layout_width="20sp"
                android:layout_height="30sp"
                android:layout_marginHorizontal="3dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingHorizontal="10dp"
            android:gravity="right"
            android:text="16:29:31"
            android:textColor="#FFFFFF"
            android:textSize="25sp"/>
    </LinearLayout>

</LinearLayout>