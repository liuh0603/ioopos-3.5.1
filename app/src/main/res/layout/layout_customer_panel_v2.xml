<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/face_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal|top"
            android:paddingTop="40dp">
            <TextView
                android:id="@+id/face_tip"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="30sp"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="-10dp"/>
            <RelativeLayout
                android:id="@+id/verify_win"
                android:layout_width="600dp"
                android:layout_height="450dp"
                android:orientation="vertical"
                android:layout_marginTop="-30dp"
                android:gravity="center_horizontal|center_vertical">
                <RelativeLayout
                    android:layout_width="450dp"
                    android:layout_height="450dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="35dp"
                    android:paddingTop="35dp"
                    android:paddingEnd="45dp"
                    android:paddingBottom="45dp">
                    <RelativeLayout
                        android:id="@+id/surface_win"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/cus_6">
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|top"
                            android:paddingStart="37dp"
                            android:paddingTop="37dp"
                            android:paddingEnd="25dp"
                            android:paddingBottom="25dp">
                            <com.pay.ioopos.display.FaceSurfaceViewV2
                                android:id="@+id/surface_ir_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/face_border" />
                            <com.pay.ioopos.display.FaceSurfaceViewV2
                                android:id="@+id/surface_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/border"
                                android:alpha="0"/>
                            <com.pay.ioopos.display.FaceImageView
                                android:id="@+id/face_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/border"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/cus_61">
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="45dp">
                    <TextView
                        android:id="@+id/user_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="30sp"
                        android:lineHeight="50sp"
                        android:textColor="@color/colorWarning"
                        android:layout_marginBottom="20dp"
                        android:visibility="invisible"/>
                    <Button
                        android:id="@+id/btn_confirm_pay"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:background="@drawable/cus_11"
                        android:text="确认支付"
                        android:textColor="#fff"
                        android:textSize="25sp"
                        android:layout_marginBottom="10dp"
                        android:visibility="invisible"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/error_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <com.pay.ioopos.display.CustomerTipVertical
            android:id="@+id/error_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/card_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">
        <LinearLayout
            android:id="@+id/card_info_panel"
            android:layout_width="650sp"
            android:layout_height="450sp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@drawable/cus_3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text="卡号："
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/card_uid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="2020011484835"
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text="姓名："
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/card_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="2020011484835"
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text="学号："
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/card_user_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="2020011484835"
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text="班级："
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/card_user_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="2020011484835"
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text="余额："
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/card_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="2020011484835"
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text="最近交易："
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/last_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="0.00"
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text="交易时间："
                    android:textColor="#ffffff"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/last_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="2020-01-14 00:00:00"
                    android:textColor="#ffffff"
                    android:textSize="30sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/card_order_panel"
            android:layout_width="650sp"
            android:layout_height="450sp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@drawable/cus_3"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:visibility="invisible">
            <ListView
                android:id="@+id/card_order_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@color/colorInfo"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pay_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">
        <RelativeLayout
            android:id="@+id/pay_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical">
            <LinearLayout
                android:id="@+id/pay_win_bg"
                android:layout_width="550dp"
                android:layout_height="350dp"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:background="@drawable/cus_3">
            </LinearLayout>
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal|top"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付(元)"
                    android:textSize="40sp"
                    android:textColor="@color/colorWhite"
                    android:includeFontPadding="false"/>
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999.99"
                    android:textSize="100sp"
                    android:textColor="@color/colorSuccess"
                    android:includeFontPadding="false"
                    android:layout_marginTop="-10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal|bottom"
                android:orientation="vertical">
                <com.pay.ioopos.display.CustomerTipHorizontal
                    android:id="@+id/pay_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/btn_scan_face"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/cus_11"
                    android:text="刷脸支付"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mobile_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="bottom|center_horizontal">
        <com.pay.ioopos.display.FaceMobileView
            android:id="@+id/mobile_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:layout_above="@+id/key_board_view"/>
        <com.pay.ioopos.widget.KeyboardView
            android:id="@+id/key_board_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:paddingHorizontal="250dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/blank_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:clickable="true"
        android:focusable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end"
            android:paddingEnd="25dp"
            android:paddingTop="45dp"
            android:paddingBottom="220dp">
            <TextView
                android:id="@+id/log"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textColor="@color/colorWhite"
                android:textSize="10sp">
            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlack"
            android:alpha="0.8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cus_2"
            android:alpha="0.3"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.pay.ioopos.widget.CustomerStatusBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/welcome_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@drawable/cus_3"
            android:alpha="0.5">
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎使用"
                android:textColor="@color/colorWhite"
                android:textSize="70sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>